<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.com.firstFragmentactivity.AskAndAnwserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.test.com.utills.CircleImageView
            android:id="@+id/teacherPhoto"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="323dp"
            android:layout_height="58dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/white_color_corn5_grayline">

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="文都-宋老师"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/teacherDescripation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/teacherName"
                android:layout_below="@+id/teacherName"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toLeftOf="@+id/dianzanRelative"
                android:text="传播靠谱专业的自考知识"/>


            <RelativeLayout
                android:id="@+id/dianzanRelative"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">


                <ImageView
                    android:id="@+id/guanzhu"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="39dp"
                    android:src="@mipmap/guanzwu"/>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/guanzhu"
                    android:background="@color/gray"/>


                <TextView
                    android:id="@+id/loveMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="34"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/deep_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.tencent.smtt.sdk.WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingTop="25dp"/>
        </com.tencent.smtt.sdk.WebView>


    </RelativeLayout>

</LinearLayout>
