<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_gray"
    tools:context="com.test.com.fourthFragementActivity.ChangePassWorldActivity">

    <LinearLayout
        android:id="@+id/changePwdLinear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/white_color_corn5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sp_12"
                android:src="@drawable/mima"/>

            <EditText
                android:id="@+id/oldPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="41dp"
                android:background="@null"
                android:hint="输入原密码"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/dash_line"
            android:layerType="software"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sp_12"
                android:src="@drawable/mima"/>

            <EditText
                android:id="@+id/newPWD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="41dp"
                android:background="@null"
                android:hint="输入新密码"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/dash_line"
            android:layerType="software"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sp_12"
                android:src="@drawable/mima"/>

            <EditText
                android:id="@+id/newPWD1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="41dp"
                android:background="@null"
                android:hint="输入新密码"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/comfirmUpData"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/white"
        android:text="完成"
        android:layout_below="@+id/changePwdLinear"
        android:background="@drawable/base_color_corn5"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</RelativeLayout>
