<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.test720.wendujiaoyu.fourthFragementActivity.ChangeUserNickNameActivity">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/editRelative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/white_color_corn5_grayline">

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/TextView"
            android:background="@null"/>

        <TextView
            android:id="@id/TextView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="5dp"
            android:background="@color/deep_gray"/>

        <RelativeLayout
            android:id="@+id/deleteRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/editTextNickname">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/guanbi"/>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/white_color_corn5_grayline"
        android:id="@+id/chooseRelative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_10">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_margin="3dp"
            android:id="@+id/niceSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview5"
            android:background="@null"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>
