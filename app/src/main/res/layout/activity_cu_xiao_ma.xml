<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.com.ThridFragemntActivity.CuXiaoMaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="促销码和代金券不能同时使用"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/CuxiaoMaRelative"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/tv_useCuXiaoMa"
            android:background="@drawable/white_color_gray_line">

            <EditText
                android:id="@+id/CuxiaoMaEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入促销码"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_useCuXiaoMa"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/CuxiaoMaRelative"
            android:layout_marginRight="15dp"
            android:background="@drawable/base_color_corn5"
            android:gravity="center"
            android:text="使用"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/CuXiaoMaRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/howToGetCuXiaoMa"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/base_color_corn5"
        android:text="如何获取促销码"
        android:textColor="@color/white"/>
</LinearLayout>
