<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/popWindowLayout"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_color_corn5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="退出当前账号？"
            android:textColor="#cb0000"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/comtinue"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/base_color_deep__corn5"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/base_color"/>

            <TextView
                android:id="@+id/cancle"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/comtinue"
                android:background="@drawable/base_color_white_5"
                android:gravity="center"
                android:text="退出"
                android:textColor="@color/base_color"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>