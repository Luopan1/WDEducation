<?xml version="1.0" encoding="utf-8"?>
<com.test720.wendujiaoyu.baseUi.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="5dp"
    android:background="@drawable/white_color_corn5"
    android:clickable="true">

    <RelativeLayout

        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/videTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="中国近现代史精讲班第3课"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/duo"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightImageView"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/red_color_right_corn5"
        android:gravity="center">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white"/>
    </RelativeLayout>
</com.test720.wendujiaoyu.baseUi.SwipeMenuView>